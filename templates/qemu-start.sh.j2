#!/bin/bash
if [[ ! -d "/tmp/{{ kvm_machine.name }}-kvm" ]]
then
	umask 077
	{% if 'vm_rollback_on_start' in kvm_machine and kvm_machine.vm_rollback_on_start == True %}
		su {{ kvm_machine.name }} -c 'mkdir "/tmp/{{ kvm_machine.name }}-kvm"' || exit $?
	{% else %}
		mkdir "/tmp/{{ kvm_machine.name }}-kvm" || exit $?
	{% endif %}
	umask 022
fi

if [[ $(stat -c %a /tmp/{{ kvm_machine.name }}-kvm) != "700" ]]
then  
	echo  /tmp/{{ kvm_machine.name }}-kvm has insecure permissions
	exit 3
fi

if [[ $(stat -c %G /tmp/{{ kvm_machine.name }}-kvm) != "{{ kvm_machine.name }}" ]]
then  
	echo  /tmp/{{ kvm_machine.name }}-kvm has insecure permissions
	exit 4
fi

if [[ $(stat -c %U /tmp/{{ kvm_machine.name }}-kvm) != "{{ kvm_machine.name }}" ]]
then  
	echo  /tmp/{{ kvm_machine.name }}-kvm has insecure permissions
	exit 5
fi

if [[ -S /tmp/{{ kvm_machine.name }}-kvm/{{ kvm_machine.name }}.monitor.S ]]
then
	ps -eaf  | grep qemu-system-x86_64 | grep {{ kvm_image_root }}/{{ kvm_machine.name }}/qemu.conf 2> /dev/null
	if [[ $? != 0 ]]
	then
		echo It appears that there is a socket file but no other qemu instance
		echo I will take the risk deleting it and go ahead 
		rm -f /tmp/{{ kvm_machine.name }}-kvm/{{ kvm_machine.name }}.monitor.S
	else
		echo There is a monitor socket file there, pse check fo another qemu instance 1st
		exit 2
	fi
fi

{% if 'vm_rollback_on_start' in kvm_machine and kvm_machine.vm_rollback_on_start == True %}
	zfs list "{{ kvm_zfs_filesystem }}_freeze/{{ kvm_machine.name }}@freeze"
	if [[ $? != 0 ]]
	then
		zfs rename -p {{ kvm_zfs_filesystem }}/{{ kvm_machine.name }} {{ kvm_zfs_filesystem }}_freeze/{{ kvm_machine.name }} || exit $?
		zfs snap -r {{ kvm_zfs_filesystem }}_freeze/{{ kvm_machine.name }}@freeze || exit $?
	else
		zfs rename -p {{ kvm_zfs_filesystem }}/{{ kvm_machine.name }} {{ kvm_zfs_filesystem }}_off/{{ kvm_machine.name }} || exit $?
	fi
	zfs clone {{ kvm_zfs_filesystem }}_freeze/{{ kvm_machine.name }}@freeze {{ kvm_zfs_filesystem }}/{{ kvm_machine.name }} || exit $?
	{% if 'allow_nesting' in kvm_machine and kvm_machine.allow_nesting == True %}
		su {{ kvm_machine.name }} -c 'qemu-system-x86_64 -cpu host -no-reboot -net none -readconfig {{ kvm_image_root }}/{{ kvm_machine.name }}/qemu.conf {% if kvm_machine_spice_addr %}-spice addr="{{ kvm_machine_spice_addr }}"{% endif %} -daemonize'
	{% else %}
		su {{ kvm_machine.name }} -c 'qemu-system-x86_64 -no-reboot -net none -readconfig {{ kvm_image_root }}/{{ kvm_machine.name }}/qemu.conf {% if kvm_machine_spice_addr %}-spice addr="{{ kvm_machine_spice_addr }}"{% endif %} -daemonize'
	{% endif %}
	# alternative here 
	# xl create {{ kvm_image_root }}/{{ kvm_machine.name }}/xl.cfg
	zfs list "{{ kvm_zfs_filesystem }}_off/{{ kvm_machine.name }}"
	if [[ $? != 0 ]]
	then
		nohup zfs destroy "{{ kvm_zfs_filesystem }}_off/{{ kvm_machine.name }}" &
	fi
	exit 0 
{% else %}
	{% if 'allow_nesting' in kvm_machine and kvm_machine.allow_nesting == True %}
	qemu-system-x86_64 -cpu host -no-reboot -net none -readconfig {{ kvm_image_root }}/{{ kvm_machine.name }}/qemu.conf {% if kvm_machine_spice_addr %}-spice addr="{{ kvm_machine_spice_addr }}"{% endif %} -daemonize
	{% else %}
	qemu-system-x86_64 -no-reboot -net none -readconfig {{ kvm_image_root }}/{{ kvm_machine.name }}/qemu.conf {% if kvm_machine_spice_addr %}-spice addr="{{ kvm_machine_spice_addr }}"{% endif %} -daemonize
	{% endif %}
	# alternative here 
	# xl create {{ kvm_image_root }}/{{ kvm_machine.name }}/xl.cfg
{% endif %}

